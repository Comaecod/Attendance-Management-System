<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_main_1_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ams_red_2" />

        <TextView
            android:id="@+id/text_view_upload"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Name Of Card"
            android:textColor="#1b21cc"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <ImageView
                android:id="@+id/img_main_card2_share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/ic_share_black_24dp" />

            <ImageView
                android:id="@+id/img_main_card2_bookmark"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/img_main_card2_share"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/ic_bookmark_border_black_24dp" />

            <ImageView
                android:id="@+id/img_main_card2_favorite"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/img_main_card2_bookmark"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/ic_favorite_border_black_24dp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>